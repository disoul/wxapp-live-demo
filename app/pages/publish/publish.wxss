#pusher {
  width: 100%;
  height: 100%;
}

.publish-page {
  width: 100vw;
  height: 100vh;
  position: relative;
}

.publish-control {
  width: 100%;
  height: 250rpx;
  background: linear-gradient(-180deg, rgba(0,0,0,0.00) 0%, rgba(0,0,0,0.24) 100%);
  transform: translateY( 250rpx);
  opacity: 0;
  transition: all ease 0.4s;
  position: absolute;
  bottom: 0;
  left: 0;
}

.publish-page.active .publish-control {
  opacity: 1;
  transform: translateY(0);
}

.switchbtn {
  width: 80rpx;
  height: 80rpx;
  left: 80rpx;
  top: 100rpx;
  position: absolute;
}

.exitbtn {
  width: 80rpx;
  height: 80rpx;
  right: 80rpx;
  top: 100rpx;
  position: absolute;
}

.magicbtn {
  width: 80rpx;
  height: 80rpx;
  right: 335rpx;
  top: 100rpx;
  position: absolute;
}

.control__mode {
  position: absolute;
  right: 305rpx;
  top: 20rpx;
  width: 120rpx;
  color: #fff;
  font-size: 20rpx;
  background: rgba(74, 74, 74, .46);
  border: 1px solid #D4D4D4;
  border-radius: 20rpx;
  text-align: center;
  padding: 10rpx;
}

.wrapper {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
}

.auth-model {
  margin-top: 30rpx;
  padding: 0 20rpx;
  display: flex;
  flex-direction: column;
}

.auth-title {
  font-size: 32rpx;
  width: 100%;
  text-align: center;
  margin-bottom: 6rpx;
}

.auth-desc {
  font-size: 20rpx;
  width: 100%;
  text-align: center;
  margin-bottom: 200rpx;
  color: rgba(0, 0, 0, .6);
}

.auth-input {
  width: 500rpx;
  margin: auto;
  font-size: 60px;
  letter-spacing: 6rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  border-bottom: 1px solid rgba(0, 0, 0, .4);
  margin-bottom: 100rpx;
}

.auth-btn {
  width: 300rpx;
}
